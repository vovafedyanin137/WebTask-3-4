{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .register:after {
            content: "";
            width: 100%;
            height: 3px;
            background-color: #fff;
            position: absolute;
            bottom: -3px;
            left: 0;
        }

        .textTitleRegister {
            text-align: center;
            margin-top: 30px;
            color: #fff;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .registerForm {
            width: 400px;
            margin: 0 auto;
        }

        .labelEmail, .labelName, .labelPassword {
            font-size: 17px;
            font-weight: 700;
            color: #ffffff;
        }

        .inputEmail, .inputName, .inputPassword {
            margin-bottom: 10px;
            border: none;
        }

        .form-check label {
            font-size: 17px;
            font-weight: 700;
            color: #ffffff;
        }

        .form-check {
            margin-bottom: 10px;
        }

        .btnRegister {
            padding: 10px 50px;
            font-size: 19px;
            font-weight: 600;
            color: #fff;
            cursor: pointer;
            margin-top: 10px;
            text-align:center;
            border: none;
            background-size: 300% 100%;
            outline: none;

            border-radius: 30px;
            moz-transition: all .4s ease-in-out;
            -o-transition: all .4s ease-in-out;
            -webkit-transition: all .4s ease-in-out;
            transition: all .4s ease-in-out;

            background-image: linear-gradient(to right, #d25687, #da6f47, #da145d , #de992c);
            box-shadow: 0 4px 15px 0 rgba(216, 98, 131, 0.75);
        }

        .btnRegister:hover {
            background-position: 100% 0;
            moz-transition: all .4s ease-in-out;
            -o-transition: all .4s ease-in-out;
            -webkit-transition: all .4s ease-in-out;
            transition: all .4s ease-in-out;
        }

        .btnRegister:focus {
            outline: none;
        }
    </style>

    <div class="container">
    <h1 class="textTitleRegister">Регистрация</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'registerForm'}}) }}
        {{ form_label(registrationForm.email, 'Почта', {'label_attr': {'class': 'labelEmail'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'inputEmail'}}) }}
        {{ form_label(registrationForm.name, 'Имя', {'label_attr': {'class': 'labelName'}}) }}
        {{ form_widget(registrationForm.name, {'attr': {'class': 'inputName'}}) }}
        {{ form_label(registrationForm.plainPassword, 'Пароль', {'label_attr': {'class': 'labelPassword'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'inputPassword'}}) }}
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'inputTerm'}}) }}
        {{ form_label(registrationForm.agreeTerms, 'Соглашение', {'label_attr': {'class': 'labelTerm'}}) }}

        <button class="btnRegister">Зарегистрироваться</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
