{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>
        .login:after {
            content: "";
            width: 100%;
            height: 3px;
            background-color: #fff;
            position: absolute;
            bottom: -3px;
            left: 0;
        }

        .textTitleLogin {
            text-align: center;
            margin-top: 30px;
            color: #fff;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .loginForm {
            width: 400px;
            margin: 0 auto;
        }

        .labelEmail, .labelPassword {
            font-size: 17px;
            font-weight: 700;
            color: #ffffff;
        }

        .inputEmail, .inputPassword {
            margin-bottom: 10px;
            border: none;
        }

        .form-check label {
            font-size: 17px;
            font-weight: 700;
            color: #ffffff;
        }

        .form-check {
            margin-bottom: 10px;
        }

        .btnLogin {
            padding: 10px 50px;
            font-size: 19px;
            font-weight: 600;
            color: #fff;
            cursor: pointer;
            margin-top: 20px;
            text-align:center;
            border: none;
            background-size: 300% 100%;
            outline: none;

            border-radius: 30px;
            moz-transition: all .4s ease-in-out;
            -o-transition: all .4s ease-in-out;
            -webkit-transition: all .4s ease-in-out;
            transition: all .4s ease-in-out;

            background-image: linear-gradient(to right, #d25687, #da6f47, #da145d , #de992c);
            box-shadow: 0 4px 15px 0 rgba(216, 98, 131, 0.75);
        }

        .btnLogin:hover {
            background-position: 100% 0;
            moz-transition: all .4s ease-in-out;
            -o-transition: all .4s ease-in-out;
            -webkit-transition: all .4s ease-in-out;
            transition: all .4s ease-in-out;
        }

        .btnLogin:focus {
            outline: none;
        }

        .alertDanger {
            margin-top: 30px;
        }
    </style>
    <div class="container">
<form method="post" class="loginForm">

{#    {% if app.user %}#}
{#        <div class="mb-3">#}
{#            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>#}
{#        </div>#}
{#    {% endif %}#}

    <h1 class="textTitleLogin">Авторизация</h1>
    <label for="inputEmail" class="labelEmail" id="inputEmail">Почта</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputEmail" required autofocus>
    <label for="inputPassword" class="labelPassword">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control inputPassword" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btnLogin" type="submit">Войти</button>

    {% if error %}
        <div class="alert alert-danger alertDanger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
    </div>
{% endblock %}
